<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.semantic_errors %>
  
  <%= f.inputs do %>
    <%= f.input :email, required: false %>
    
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.input :password, required: false,
      hint: "Leave blank if you don't want to change it." %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :current_password, required: true,
      hint: "We need your current password to confirm your changes." %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: "Update", wrapper_html: { class: "btn-default" } %>
  <% end %>
<% end %>

<h2>Cancel my account</h2>

<%= button_to "Cancel my account", registration_path(resource_name), method: :delete,
  class: 'btn btn-danger', data: { confirm: "Are you sure?" } %>
