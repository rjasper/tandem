<h1>Sign up</h1>

<%= semantic_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.semantic_errors %>

  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, required: true %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, label: "Sign up", wrapper_html: { class: "btn-default" } %>
  <% end %>
<% end %>
