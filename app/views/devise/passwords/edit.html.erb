<h1>Change your password</h1>

<%= semantic_form_for(resource, namespace: 'password', as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.semantic_errors %>

  <%= f.input :reset_password_token, as: :hidden %>

  <%= f.inputs do %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, required: true %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: "Change password", wrapper_html: { class: "btn-default" } %>
  <% end %>
<% end %>
